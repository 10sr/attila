{{!< default}}

<header id="blog-header"{{#if @blog.cover}} class="has-cover"{{/if}}>
	<div class="inner">
		<nav id="navigation">
			<span id="home-link">
				<a href="{{@blog.url}}" title="Home"><i class="ic ic-arrow-left"></i> Home</a>
			</span>
			<span id="rss-link">
				<a href="{{@blog.url}}/tag/{{tag.slug}}/rss/" title="{{tag.name}} Feed"><i class="ic ic-rss"></i> {{tag.name}}</a>
			</span>
		</nav>
		<h1 class="blog-name">{{tag.name}}</h1>
		<span class="blog-description">
		{{#if tag.description}}
			{{tag.description}}
		{{else}}
			Posts: {{pagination.total}}
		{{/if}}
		</span>
		{{#if @blog.cover}}
		<div class="blog-cover cover" style="background-image: url('{{@blog.cover}}');"></div>
		{{/if}}
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">
	
		{{> "loop"}}
	
	</main>

</div>